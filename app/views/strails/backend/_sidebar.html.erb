<div class="sidebar">
  <div class="sidebar-content">
    <%= active_link_to(backend_dashboard_path, active: :inclusive) do %>
      <%= material_icon "dashboard" %> <%= t("dashboard") %>
    <% end %>
    <%= active_link_to(backend_products_path, active: :inclusive) do %>
      <%= material_icon "local_mall" %> <%= translated_model_name("product", plural: true) %>
    <% end %>
    <%= active_link_to(backend_option_types_path, active: :inclusive) do %>
      <%= material_icon "settings" %> <%= translated_model_name("option_type", plural: true) %>
    <% end %>
  </div>
  <div class="sidebar-footer"><%= t("strails_version", version: Strails::VERSION) %></div>
</div>

<div class="overlay"></div>

<script>
  function responsiveSidebar() {
    let sidebar = $(".sidebar-wrapper")
    let updateClass = function() {
      if (xl == true) {
        sidebar.addClass("desktop")
        sidebar.removeClass("mobile")

        sidebar.addClass("active")
      } else {
        sidebar.addClass("mobile")
        sidebar.removeClass("desktop")

        sidebar.removeClass("active")
      }
    }

    updateClass()
    $(window).resize(updateClass)

    $('#sidebarCollapse, .sidebar-wrapper .overlay').on('click', function (event) {
      $(".sidebar-wrapper").toggleClass("active")

      event.preventDefault()
  });
  }

  $(document).ready(function() {
    responsiveSidebar()
  })
</script>
