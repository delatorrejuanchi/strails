<div class="option-type">
  <div class="card">
    <div class="card-header">
      <h3>Option Type: <%= @option_type.name %></h3>
    </div>
    <div class="card-body">
      <%= render 'form', option_type: @option_type %>
    </div>
  </div>
</div>

<%= content_for :content_navigation do %>
  <%= active_link_to(backend_option_type_option_values_path(@option_type), active: :inclusive) do %>
    <%= material_icon "settings" %> Option Values
  <% end %>
<% end %>
