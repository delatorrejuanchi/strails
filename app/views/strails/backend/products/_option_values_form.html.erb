<% if grouped_option_values.empty? %>
  <div class="alert alert-info"><%= t("alerts.no_records_yet", plural_model_name: translated_model_name("option_value", plural: true)) %></div>
<% else %>
  <div class="card">
    <div class="card-header"><%= translated_model_name("option_value", plural: true) %></div>
    <div class="card-body">
      <div class="row">
        <% grouped_option_values.each do |option_type, option_values| %>
          <div class="col-lg-3 col-sm-6">
            <%= option_type_checkbox(form, option_type) %>
            <%= option_value_checkboxes(form, option_values) %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<script>
  function checkOptionValues(id) {
    let checked = $(`#option-type-${id}-checkbox`).prop('checked')
    $(`#option-values-for-option-type-${id} .form-check-input`).prop('checked', checked)
  }

  function checkOptionType(id) {
    let some_checked = $(`#option-values-for-option-type-${id} .form-check-input:checked`).length > 0
    $(`#option-type-${id}-checkbox`).prop('checked', some_checked)
  }
</script>
